{
    "compilerOptions": {
      "module": "NodeNext",
      "target": "ES2020",
      "baseUrl": "src",
      "outDir": "./dist",
      "moduleResolution": "Node16",
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "strictNullChecks": true,
      "declaration": true,
      "declarationMap": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "newLine": "lf",
      "noEmitOnError": true,
      "lib": ["ES2020"],
      "noImplicitAny": true
    },
    "include": [
      "src/**/*",
      "src/cjs/package.json"
    ],
    "ignore": ["node_modules", "dist"]
  }
